@using WitcherProject.Shared

<RadzenMenu class="rz-background-color-black" >
    
    <RadzenMenuItem Text="Settings" Style="color: #0b5ed7" >
        <AuthorizeView Roles="@RoleNames.GetRoles(new []{RoleNames.Admin, RoleNames.UserManager})">
            <Authorized>
                <RadzenMenuItem Text="User management" Path="/AdminPage" Icon="list"></RadzenMenuItem>
                <RadzenMenuItem Text="Registration" Path="/RegisterUser" Icon="account_circle"></RadzenMenuItem>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                <RadzenMenuItem Text="Personal info" Path="/personalInfo" Icon="description" ></RadzenMenuItem>
                <RadzenMenuItem Text="Logout" Path="/logout" Icon="logout"></RadzenMenuItem>
            </Authorized>
        </AuthorizeView>
    </RadzenMenuItem>
</RadzenMenu>
   
