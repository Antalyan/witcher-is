@using WitcherProject.BL.Services.Interfaces
@using WitcherProject.BL.DTOs.Contract
@using WitcherProject.BL.DTOs.Contractor
@using WitcherProject.BL.DTOs.Person
@using WitcherProject.Shared
@using WitcherProject.Shared.Enums

@page "/contracts"
@attribute [Authorize(Roles = RoleNames.ContractManager + "," + RoleNames.Admin + "," + RoleNames.Witcher)]
@inject NavigationManager NavigationManager

<h3 class="text-primary">Contracts</h3>

<ContractTableComponent/>

<button class="btn btn-outline-primary" onclick="@NavigateToAdd">
    <i class="bi bi-plus-circle" title="Add"></i>
</button>

@code {

    private void NavigateToAdd()
    {
        NavigationManager.NavigateTo($"/contracts/add");
    }
}